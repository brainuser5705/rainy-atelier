---
export const prerender = false;
import { STRAPI_URL, BASE_URL } from '../lib/env';

const { container, path, cover_piece_url, name } = Astro.props;
---

<style>

	a {
		display: inline-block;
		height: 100%;
		text-transform: none;
	}

	a:visited {
		text-transform: none;
		color: #eee;
	}

	.landing img {
		width: 100%;
		height: auto;
	}

	.landing .category-name {
		color: #eee;
		float: left;
		font-size: 20px;
		font-style: normal;
		font-weight: 600;
		padding-bottom: 9.5%;
		padding-top: 4%;
		text-align: left;
		text-transform: none;
		width: 90%;
	}

	@media screen and (min-width: 540px) {
		
		.landing.category-selection {
			width: 49%;
			margin-right: 1%;
			margin-bottom: 4%;
		}

	}

	@media screen and (max-width: 541px) {

		.landing.category-selection {
			width: 100%;
			margin-bottom: 4%;
		}
		
	}

	/* Other projects css */
	.other-projects.category-selection{
		width: 100%;
	}

	.other-projects img {
		width: 100%;
	}

	.other-projects .category-name {
		color: #eee;
		float: left;
		font-size: 20px;
		font-style: normal;
		font-weight: 400;
		line-height: 18px;
		padding-bottom: 5px;
		padding-left: 0%;
		padding-right: 0%;
		padding-top: 0px;
		text-align: left;
		text-transform: none;
		width: 90%;
	}

</style>

<div class={`${container} category-selection`}>
	<a href={`${BASE_URL}/${path}`}>
		<img src={`${cover_piece_url}`} />
		<div class="category-name">{name}</div>
	</a>
</div>
