---
const { id, pageSelected } = Astro.props
---
<style>

.nav-links a {
    display: block;
    padding: 15px;
    text-align: left;
    text-decoration: none;
    font-weight: bold;
}

.nav-links a.concept {
    font-size: 2rem;
    color: orange;
    text-transform: uppercase;
}

#sidebar {
    font-family: "helvetica";
    white-space: nowrap;
    width:200px;
}

a {
    color:rgb(238, 238, 238);
}

.active{
    color: yellow;
}

.active:hover{
    color: yellow;
}

</style>
<div class="nav-links" id=`${id}`>
    {pageSelected}
    {pageSelected == "projects"}
    <a href="/" class="category" id="concept" class:list={[{active: pageSelected == "concept"}]}>Concept / Visdev</a>
    <a href="/projects" id="projects" class:list={['project', {active: pageSelected == "projects"}]}>Projects</a>
    <a href="/bgs" class="project" id="backgrounds" class:list={[{active: pageSelected == "bgs"}]}>Backgrounds</a>
    <a href="/characterdesign" class="project" id="characterdesign" class:list={[{active: pageSelected == "characterdesign"}]}>Character Design</a>
    <a href="/personal" class="category" id="personal" class:list={[{active: pageSelected == "personal"}]}>Personal</a>
    <a href="/contact" class="category" id="about" class:list={[{active: pageSelected == "contact"}]}>About & Contact</a>
</div>